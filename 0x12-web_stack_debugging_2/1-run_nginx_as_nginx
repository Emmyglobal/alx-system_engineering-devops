#!/usr/bin/env bash

# Set the nginx user in the nginx.conf file
sed -i 's/user\s*nginx;/user nginx;/' /etc/nginx/nginx.conf

# Modify the default site configuration to listen on all active IPs on port 8080
sed -i 's/listen\s*\(.*\)/listen 8080;/' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
service nginx restart

# Display the status to verify the changes
service nginx status
