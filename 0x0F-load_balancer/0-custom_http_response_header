#!/usr/bin/env bash

# Update package list
sudo apt update

# Install Nginx
sudo apt install -y nginx

# Set the hostname as a variable
hostname=$(hostname)

# Create a backup of the default Nginx configuration file
sudo cp /etc/nginx/nginx.conf /etc/nginx/nginx.conf.bak

# Configure Nginx to include the custom header
sudo bash -c "cat <<EOL > /etc/nginx/nginx.conf
user www-data;
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
    worker_connections 768;
    # multi_accept on;
}

http {

    ##
    # Basic Settings
    ##

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    server_tokens off; # Hide Nginx version in the response header

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # SSL Settings
    ##

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2; # Dropping SSLv3, ref: POODLE
    ssl_prefer_server_ciphers on;

    ##
    # Logging Settings
    ##

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    ##
    # Gzip Settings
    ##

    gzip on;

    # Custom Header Configuration
    server {
        listen 80 default_server;
        listen [::]:80 default_server;

        server_name _;

        location / {
            add_header X-Served-By $hostname;
            # Other configuration...
        }

        # Additional server blocks and configurations...
    }

    # Additional http block configurations...
}

EOL"

# Restart Nginx to apply the changes
sudo service nginx restart
